#include <stdio.h>

int main() {
    int totalSeconds;
    printf("Введіть кількість секунд: ");
    scanf("%d", &totalSeconds);

    int hours = totalSeconds / 3600;
    int minutes = (totalSeconds % 3600) / 60;
    int seconds = totalSeconds % 60;

    printf("Години: %d, Хвилини: %d, Секунди: %d\n", hours, minutes, seconds);
    return 0;
}
